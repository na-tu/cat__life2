<h5>posts#edit</h5>

<h1>Editing post</h1>

<div>
  <%= flash[:notice]%>
</div>

<%= form_with model: @post do |f| %>

  <h3>Title</h3>
    <%= f.text_field :title %>
  <h3>Opinion</h3>
    <%= f.text_area :body %>
  <h3>Cat image</h3>
    <%= f.file_field :image, accept: "image/*"%>
    
    <%= f.submit "Update Post" %>
    
    <%= link_to "Show",post_path(@post) %>
    <%= link_to "Back",posts_path %>
    
    <% if @post.errors.any? %>
    <%= @post.errors.count %>error
    <%= @post.errors.full_messages.each do |message| %>
    
    <ul>
      <li><%= message %></li>
    </ul>
    <% end %>
    <% end %>
    <% end %>